<body style="background: #28282B;">

    <!-- HEADING -->
    <div class="heading">
        <h1><i class="fas fa-cloud-sun"></i>Weather Bug</h1>
        
    </div> 

    <!-- SEARCH -->
    <section class="search m-5">
        <form class="Eloc">
            <input placeholder="Enter location" type="text">
            <button id="myButton">search</button>            
        </form>
    </section> 
         <!-- CARD-CURRENT  -->
     <section  class="container">
        <div class="currentWeather">
            <div class="card m-5">
                <div class="card-body">
                    <div class="Loc-date" >                        
                            <div id="message-1"></div>
                            
                            <div>
                            <div id="date"> </div>
                            <div id="time">  </div> 
                            </div>                        
                    </div>

                    <div class="Ctemp text-center">
                       <h1><a id="temp"></a> </h1> 
                        <p style="color:grey" id="week"></p>
                       
                    </div>

                    <div class="info">
                        <div class="left">
                            <div class="pro">Feels like : <a id="feels" style="margin:0px;padding:0px"></a></div>
                            <div class="pro" style="float: left;">pressure : <a id="pressure" style="margin:0px;padding:0px"></a></div>
                            <div class="pro">Humidity : <a id="humidity" style="margin:0px;padding:0px"></a></div>
                            <div class="pro">Wind speed : <a id="speed" style="margin:0px;padding:0px"></a></div>
                            <div class="pro">visibility : <a id="visibility" style="margin:0px;padding:0px"></a></div>
                        </div>
                        <div class="right">
                                <p><img id="imageid"  style="height:160px; display:none; width:160px; position:absolute; top:110px; right:1px;" src="http://openweathermap.org/img/wn/10d@2x.png" alt=""></p>                          
                                 <br><br> <p id="des" style="margin-right: 35px;"></p>               
                        </div>
                    </div>
                </div>
              </div>
        </div>
    </section> 

   <h3 style="text-align:center; color:beige;">Weather Forecast</h3>
   <section class="container">
    <div class="currentWeather">
        <div class="card m-5">
            <div class="card-body" id="fill" style="overflow-x: auto; display:flex;">


            </div>
          </div>
    </div>
</section> 


<h3 style="text-align:center; color:beige;">8 Day Weather Report</h3>
<section class="container">
    <div class="currentWeather">
        <div class="card m-5">
<div class="center" style="text-align:center; ">
<div id="daily" style="overflow-x: auto; display:flex; padding:30px;">
</div>
</div>
</section> 

</div>
</div>


</body>
