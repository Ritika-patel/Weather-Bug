<style>
    
@import url('https://fonts.googleapis.com/css2?family=Satisfy&display=swap');
body{
    font-family:'Courgette', cursive;
    color:grey;
}
.Eloc input{
    padding:2px;
    border:3px solid grey;
    border-radius:5px;
    padding:5px;
}
.Eloc button{
    padding:5px;
    padding-left: 10px;
    padding-right: 10px;
    margin:2px;
    background: grey;
    border-radius: 5px;
    border: 1px solid grey;
}
.Eloc button:hover{
    color: grey;
    background:#28282B;
    border: 1px solid grey;
}
.heading{
  font-family: 'Bree Serif', serif;  
  color:beige;
  margin-top:20px;
  text-align:center;
}
.underline {
  border-bottom: 12px solid currentColor;
}
.Loc-date{
    display: flex;
    justify-content: space-between;
}
.info{
    display: flex;
    justify-content: space-between;
}
.pro{
    font-size:15px;
}

@media only screen and (max-width: 792px){

  
  .pro{
    font-size:10px;
}
  #temp{
      font-size:20px;
  }
  #des{
      font-size: 10px;
  }
}

